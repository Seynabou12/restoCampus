{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}

	<section>
		<div class:"container-fluid container-xl d-flex align-items-center justify-content-lg-between" style="margin-top:100px">
			<div class="container mt-6">

				<h2>Interface Administrateur</h2>
				<table class="table table-striped table-dark">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">prenom</th>
							<th scope="col">Nom</th>
							<th scope="col">Adresse</th>
							<th scope="col">telephone</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for responsable in responsable %}
							<tr scope="row">
								<td>{{responsable.id}}</td>
								<td>{{responsable.prenom}}</td>
								<td>{{responsable.nom}}</td>
								<td>{{responsable.adresse}}</td>
								<td>{{responsable.telephone}}</td>
								<td>
									<a href="{{path('admin_edit', {'id': responsable.id})}}">
										<i class="fas fa-edit"></i>
									</a>
								</td>
								<td>
									<a href="{{path('admin_delete', {'id': responsable.id})}}" onclick="return confirm('Etes vous sur de bien vouloir supprimer ce responsable'  )">
										<i class="fas fa-trash-alt"></i>
									</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('responsable_create') }}" class="book-a-table-btn scrollto d-none d-lg-flex mx">
					ajouter un responsable
				</a>
				<br>
				<a href="{{ path('restaurant_index') }}" class="book-a-table-btn scrollto d-none d-lg-flex">
					liste des Restaurants
				</a>
			</div>
		</div>
	</section>
{% endblock %}
