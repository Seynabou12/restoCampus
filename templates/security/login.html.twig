{% block body %}
	<section>
		<div class="container">
			<div class="container-login">
				<div class="login-title">
					<h1>CAMPUS-RESTO</h1>
					<div class="container-login-img-p">
						<div class="login-img">
							<img src="image/respo.jpeg" style="width:200px; height:200px;" alt="">
						</div>
					</div>
				</div>
				<div class="login-form">
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.username }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}
						<div class="form-row">
							<label for="email"><strong> Votre Adresse Email</strong></label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
						</div>
						<div class="form-row">
							<label for="password"><strong>Votre Mot de Passe</strong></label>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="form-button">
							<button class="btn btn-lg btn-primary" type="submit">
								Connecter
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
