{% extends 'base.html.twig' %}

{% block title %}Plats
{% endblock %}

{% block body %}
	<h1>Plats</h1>

	<section id="menu" class="menu section-bg">
		<div class="container" data-aos="fade-up">
			<div class="section-title">
				<h2>Plats du Jour</h2>
			</div>
			<div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
					<div class="col-lg-6 menu-item filter-starters">
						<img src="assets/img/menu/greek-salad.jpg" class="menu-img" alt="">
						<div class="menu-content">
							<a href="#">{{ plat.nomPlats }}</a>
						</div>
                        <div class="menu-content">
							<a href="#">{{ plat.description }}</a>
						</div>
					</div>
			    </div>
		    </div>
	</section>
	{# <table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ plat.id }}</td>
				</tr>
				<tr>
					<th>NomPlats</th>
					<td>{{ plat.nomPlats }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ plat.description }}</td>
				</tr>
			</tbody>
		</table> #}

	<section id="book-a-table" class="book-a-table">
		<div class="container" data-aos="fade-up">

			<div class="section-title">
				<p>Merci de commenter le Plat</p>
			</div>
			{# <form method="post" role="form" class="php-email-form" data-aos="fade-up" data-aos-delay="100"> #}
				<div class="row">
					{{form_start(commentForm)}}
					<div class="col-lg-4 col-md-6 form-group">
						{{form_row(commentForm.Nom, {attr: {class: 'form-control'}})}}
					</div>
					<div class="col-lg-4 col-md-6 form-group">
						{{form_row(commentForm.prenom, {attr: {class: 'form-control'}})}}
					</div>
					<div class="col-lg-4 col-md-6 form-group">
						{{form_row(commentForm.email, {attr: {class: 'form-control'}})}}
					</div>
					<div class="form-group mt-3">
						{{form_row(commentForm.message, {attr: {class: 'form-control'}})}}
					</div>
					<div class="text-center">
						<button type="submit">Commenter</button>
					</div>
					{{form_end(commentForm)}}
				</div>
			{# </form> #}
		</div>
	</section>
	<br>
	<a href="{{path('plats_edit', {id: plat.id})}}">
		<button class="btn btn-primary">Modifier</button>
	</a>
	<a href="{{path('plats_delete', {id: plat.id})}}">
		<button class="btn btn-primary">Supprimer</button>
	</a>
	<a href="{{path('plats_index')}}">
		<button class="btn btn-primary">Retour liste des plats</button>
	</a>
{% endblock %}
